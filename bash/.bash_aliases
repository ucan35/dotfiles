# i keep using nano mistakenly
alias nano='vim'

# common
alias ll='ls -l --color=auto'
alias grep='grep --color=auto'
alias tmux='tmux -2'
alias ..='cd ..'
alias go_temp='cd $(mktemp -d)'

# https://github.com/haikarainen/light
l () {
  if [ -z "$1" ]; then
    command light -G;
  else
    command light -S "$1";
  fi
}
